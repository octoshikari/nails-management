{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignore": ["./**/public/config.js"]
  },
  "organizeImports": {
    "enabled": true
  },
  "css": {
    "formatter": {
      "enabled": true,
      "indentWidth": 2
    },
    "linter": {
      "enabled": true
    },
    "parser": {
      "allowWrongLineComments": true
    }
  },
  "formatter": {
    "useEditorconfig": true,
    "enabled": true,
    "lineEnding": "lf",
    "lineWidth": 100,
    "indentStyle": "space",
    "indentWidth": 2,
    "attributePosition": "multiline",
    "formatWithErrors": false
  },
  "javascript": {
    "formatter": {
      "bracketSpacing": true,
      "jsxQuoteStyle": "double",
      "quoteStyle": "single"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "noDefaultExport": "error",
        "useImportType": "error"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noConsoleLog": "error",
        "noImplicitAnyLet": "warn"
      },
      "correctness": {
        "noUnusedImports": "error"
      },
      "a11y": {
        "useKeyWithClickEvents": "warn",
        "noSvgWithoutTitle": "off"
      },
      "complexity": {
        "noBannedTypes": "warn",
        "noForEach": "off"
      },
      "nursery": {},
      "recommended": true
    }
  }
}
